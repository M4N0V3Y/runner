{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile Java",
            "type": "shell",
            "command": "mvn compile",
            "group": "build",
            "problemMatcher": ["$javac"]
        },
        {
            "label": "build all project",
            "type": "shell",
            "command": "mvn package",
            "group": "build",
            "problemMatcher": ["$javac"]
        },
        {
            "label": "debug Java",
            "type": "shell",
            "command": "mvnDebug exec:java -Dexec.mainClass=com.assinador.App",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$javac"]
        },
        {
            "label": "export JAR",
            "type": "shell",
            "command": "mvn package",
            "args": ["-DoutputDirectory=assinador/target/jar"],
            "group": "build",
            "problemMatcher": ["$javac"],
            "detail": "This task compiles the project and packages it into a JAR file in the target/jar directory."
        }
    ]
}
